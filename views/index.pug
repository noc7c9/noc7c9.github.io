extends _layout.pug

block variables
    - let title = 'Portfolio'

mixin project(options)
    - let title = options.title
    - let image = options.image
    - let largeImage = (options.image || '').replace('.thumb', '')
    - let github = options.github
    - let link = options.link
    - let tags = options.tags || []
    .project.columns
        if image
            .column.is-one-quarter.img-container
                a(href=largeImage, target='_blank')
                    img(src=image)
        .column
            h1.title
                span.title-text= title
                if github
                    a(href=github)
                        span.icon
                            i.fab.fa-github-alt
                if link
                    a(href=link)
                        span.icon.is-large
                            i.fas.fa-link
            .tags
                each tag in tags
                    span.tag.is-primary= tag
            block

block content
    #image-view.modal
        .modal-background
        .modal-content
            .box
                img
        button.modal-close

    section.section
